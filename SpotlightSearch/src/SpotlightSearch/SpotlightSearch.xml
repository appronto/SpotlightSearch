<?xml version="1.0" encoding="utf-8" ?>
<widget id="SpotlightSearch.widget.SpotlightSearch" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>SpotlightSearch</name>
    <description>Widget for the Spotlight search module.</description>

    <icon></icon>

    <properties>
        <property key="inputValue" type="attribute">
            <caption>Attribute</caption>
            <category>Settings</category>
            <description>The input attribute of the widget.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="mfToExecute" type="microflow" required="true" defaultValue="">
            <caption>Microflow</caption>
            <category>Settings</category>
            <description>The microflow to execute upon hitting the enter key</description>
            <returnType type="Boolean" />
        </property>
        <property key="async" type="boolean" defaultValue="false">
            <caption>Asynchronous</caption>
            <category>Settings</category>    
            <description>Call microflow asynchronously</description>    
        </property>
        <property key="progressBar" type="boolean" defaultValue="false">
             <caption>Show progress</caption>
             <category>Settings</category>    
             <description>Show a progress bar</description>    
        </property>
        <property key="clearSearchInput" type="boolean" defaultValue="true">
             <caption>Clear the input</caption>
             <category>Settings</category>    
             <description>Must the inputbox be cleared when the search has been executed.</description>    
        </property>
         <property key="progressMsg" type="string" defaultValue="Loading">
            <caption>Progress message</caption>
             <category>Settings</category>    
             <description>Progress bar message (only visible if 'Show progress' is true)</description>    
        </property>
		<property key="placeHolderTxt" type="translatableString"  required="false">
            <caption>Placeholder</caption>
            <category>Settings</category>
            <description>Placeholder text on the inputfield.</description>
        </property>
		<property key="optionstext" type="translatableString"  required="false">
            <caption>Search options text</caption>
            <category>Group selection</category>
            <description>The suffix text that will be shown in the possible options.</description>
        </property>
		
		<property key="tableEntity" required="false" type="entity" allowNonPersistableEntities="false">
			<caption>Search entities</caption>
			<category>Group selection</category>
			<description>On what entities can be search and can be selected as specific table.</description>
		</property>
		<property key="tableConstraint" type="entityConstraint" entityProperty="tableEntity" required="false">
            <caption>XPath Constraint</caption>
            <category>Group selection</category>
            <description>The XPath constraint on the objects.</description> 
        </property>
		<property key="titleAttr" required="false" type="attribute" entityProperty="tableEntity">
			<caption>Title</caption>
			<category>Group selection</category>
			<description>The name of the table that will be searched.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="selectionRef" type="entity" required="false" isPath="yes" pathType="reference" allowNonPersistableEntities="true">
            <caption>Reference selected item</caption>
            <category>Group selection</category>
            <description>The reference will be set when the search must be done for a specific table.</description>
        </property>
        
        <property key="searchMF" type="microflow" required="false" defaultValue="">
            <caption>First result microflow</caption>
            <category>Direct search</category>
            <description>The microflow that will give the first found results. The output must return a list of 'Result entity'.</description>
            <returnType type="Void" />
        </property>
        <property key="searchEntity" required="false" type="entity" allowNonPersistableEntities="true">
			<caption>Result entity</caption>
			<category>Direct search</category>
			<description>The object type that will returned containing the results.</description>
		</property>
        <property key="searchAttr" required="false" type="attribute" entityProperty="searchEntity">
			<caption>Result Title</caption>
			<category>Direct search</category>
			<description>The attribute that will be shwon in the results.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
        <property key="searchIcon" required="false" type="attribute" entityProperty="searchEntity">
			<caption>Result Glyphicon</caption>
			<category>Direct search</category>
			<description>The optional glyphicon that will shown before the Resylt Title.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
        <property key="searchOpenMF" type="microflow" entityProperty="searchEntity" required="false" defaultValue="">
            <caption>Result open microflow</caption>
            <category>Direct search</category>
            <description>The microflow that will be triggered when a found result is selected.</description>
            <returnType type="Void" />
        </property>
        <property key="waitTime" type="integer" defaultValue="500">
             <caption>Wait for search</caption>
             <category>Direct search</category>    
             <description>Time in milliseconds before </description>    
        </property>
    </properties>
</widget>

